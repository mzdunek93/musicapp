div(ng-include='"components/navbar/navbar.html"')
.container
  .row
    .col-sm-12
      h1 Sign up
    .col-sm-12
      form.form(name='form', ng-submit='register(form)', novalidate='')
        .form-group(ng-class='{ "has-success": form.username.$valid && form.username.$dirty,\
        "has-error": form.username.$invalid && form.username.$dirty }')
          label Name
          input.form-control(type='text', name='username', ng-model='user.username',
            ng-model-options='{ debounce: { default: 1000, blur: 0 } }', available='', required='')
          div(ng-messages='form.username.$error' ng-show='form.username.$dirty || submitted')
            p.help-block(ng-message='required')
              | A username is required
            p.help-block(ng-message='available')
              | This username is already taken
          p.help-block(ng-show='form.username.$pending')
            | checking username...
          p.help-block(ng-show='form.username.$dirty && form.username.$valid')
            | This username is available

        .form-group(ng-class='{ "has-success": form.email.$valid && form.email.$dirty,\
        "has-error": form.email.$invalid && form.email.$dirty }')
          label Email
          input.form-control(type='email', name='email', ng-model='user.email',
            ng-model-options='{ debounce: { default: 1000, blur: 0 } }', available='', required='')
          div(ng-messages='form.email.$error' ng-show='form.email.$dirty || submitted')
            p.help-block(ng-message='required')
              | An email is required
            p.help-block(ng-message='email')
              | This is not a valid email
            p.help-block(ng-message='available')
              | This email is already taken
          p.help-block(ng-show='form.email.$pending')
            | checking email...
          p.help-block(ng-show='form.email.$dirty && form.email.$valid')
            | This email is available

        .form-group(ng-class='{ "has-success": form.password.$valid && submitted,\
        "has-error": form.password.$invalid && submitted }')
          label Password
          input.form-control(type='password', name='password', ng-model='user.password',
            ng-model-options='{ debounce: { default: 500, blur: 0 } }', ng-minlength=6, required='')
          div(ng-messages='form.password.$error' ng-show='form.password.$dirty || submitted')
            p.help-block(ng-message='required')
              | A password is required
            p.help-block(ng-message='minlength')
              | Password must be at least 6 characters long.

        .form-group(ng-class='{ "has-success": form.passwordConfirmation.$valid && submitted,\
        "has-error": form.passwordConfirmation.$invalid && submitted }')
          label Password confirmation
          input.form-control(type='password', name='passwordConfirmation', ng-model='user.passwordConfirmation',
            ng-model-options='{ debounce: { default: 500, blur: 0 } }', required='', confirmation='')
          div(ng-messages='form.passwordConfirmation.$error' ng-show='form.passwordConfirmation.$dirty || submitted')
            p.help-block(ng-message='required')
              | Password confirmation is required
            p.help-block(ng-message='confirmation')
              | Passwords don't match.

        div
          button.btn.btn-inverse.btn-lg.btn-login(type='submit')
            | Sign up
          = ' '
          a.btn.btn-default.btn-lg.btn-register(href='/login')
            | Login


        hr

        div
          a.btn.btn-facebook(href='', ng-click='loginOauth("facebook")')
            i.fa.fa-facebook
            |  Connect with Facebook
          = ' '
          a.btn.btn-google-plus(href='', ng-click='loginOauth("google")')
            i.fa.fa-google-plus
            |  Connect with Google+
          = ' '
          a.btn.btn-twitter(href='', ng-click='loginOauth("twitter")')
            i.fa.fa-twitter
            |  Connect with Twitter
  hr
